@model SimpleBlog.Areas.Admin.ViewModels.UsersEdit

@{
  ViewBag.Title = "Edit";
}

<h2>Areas/Admin/Views/Users/New</h2>
<h2>Edit User @Model.Username</h2>

@using (Html.BeginForm())
{
  @Html.ValidationSummary() 

  <div class="form-group">
    @Html.LabelFor(f => f.Username)
    @Html.TextBoxFor(f => f.Username, new { @class = "form-control" }) @* placing @ symbol in front of the "class" word is to threat it as identifier, because "class" is a keyword in c# *@
  </div>
  
  <div class="form-group">
    @Html.LabelFor(f => f.Email)
    @Html.TextBoxFor(f => f.Email, new { @class = "form-control", type = "email" }) @* placing @ symbol in front of the "class" word is to threat it as identifier, because "class" is a keyword in c# *@
  </div>
    
  <input type="submit" value="Update User" class="btn btn-primary" />
  <a href="@Url.Action("Index")">or cancel</a>
}
